Bootstrap: docker

From: void-linux/void-musl:latest

Registry: ghcr.io

%post
    # Prereqs and niceties
    xbps-install -Syu bash git make pkg-config root root-R python3-pyroot gsl-devel cmake gcc-fortran gcompat libexecinfo-devel expat-devel libvdt-devel libgomp-devel musl-devel libxerces-c-devel

    # Make directory for source code
    mkdir /src

    # Install Geant4
    mkdir /src/geant4
    export GEANT4_DIR=/src/geant4
    git clone https://gitlab.cern.ch/geant4/geant4.git $GEANT4_DIR
    cd $GEANT4_DIR
    mkdir build
    cd build
    cmake -DGEANT4_USE_GDML=ON $GEANT4_DIR
    make -j8
    make install

    # Install Garfield++
    mkdir /src/garfield
    export GARFIELD_HOME=/src/garfield
    git clone https://gitlab.cern.ch/garfield/garfieldpp.git $GARFIELD_HOME
    cd $GARFIELD_HOME
    mkdir build
    cd build
    cmake -DCMAKE_INSTALL_PREFIX=/usr/local $GARFIELD_HOME
    make -j8
    make install

    # Install NEST
    mkdir /src/nest
    export NEST_DIR=/src/nest
    git clone https://github.com/NESTCollaboration/nest.git $NEST_DIR
    cd $NEST_DIR
    mkdir build
    cd build
    cmake -DBUILD_ROOT=ON -DG4=ON $NEST_DIR
    make -j8
    make install

    # Delete unnecessary recovery stuff after installation
    rm -rf /var/cache/xbps/*
    rm -rf /src

%environment
    . /usr/local/share/Garfield/setupGarfield.sh
    cd /usr/bin; . /usr/bin/thisroot.sh; cd

%labels
    Author Pierce Comerford
    Version 1.5

%help
    Neat fully-integrated void musl+mksh+linux with essential particle physics sim software, namely:
        - ROOT
        - Garfield++
	- Geant4
	- NEST
